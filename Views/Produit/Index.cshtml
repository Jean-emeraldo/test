@model IEnumerable<CrudDotNet.Models.Produit>

<h1>Liste des Produits</h1>

<a asp-action="Creer" class="btn btn-primary">Ajouter un Produit</a>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Cat√©gorie</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produit in Model)
        {
            <tr>
                <td>@produit.nom_produit</td>
                <td>@produit.Categorie?.nom_categorie</td>
                <td>
                    <a asp-action="Modifier" asp-route-id="@produit.id_produit" class="btn btn-warning btn-sm">Modifier</a>
                    <a asp-action="Supprimer" asp-route-id="@produit.id_produit" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
