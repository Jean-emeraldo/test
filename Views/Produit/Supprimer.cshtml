@model CrudDotNet.Models.Produit

<h1>Supprimer le Produit</h1>

<div>
    <h4>Voulez-vous vraiment supprimer ce produit ?</h4>
    <dl class="dl-horizontal">
        <dt>Nom</dt>
        <dd>@Model.nom_produit</dd>


        <dt>Cat√©gorie</dt>
        <dd>@Model.Categorie?.nom_categorie</dd>
    </dl>

    <form asp-action="SupprimerConfirme">
        <input type="hidden" asp-for="id_produit" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
