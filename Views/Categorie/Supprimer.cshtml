@model CrudDotNet.Models.Categorie

<h1>Supprimer unobtrusive Categorie</h1>

<div class="alert alert-danger">
    <p>Êtes-vous sûr de vouloir supprimer Cette categorie ? Cette action est irréversible.</p>
</div>

<table class="table">
    <tr>
        <th>Nom</th>
        <td>@Model.nom_categorie</td>
    </tr>
</table>

<form asp-action="Supprimer" method="post">
    <input type="hidden" asp-for="id_categorie" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
