@model IEnumerable<CrudDotNet.Models.User>

<h2>Liste des Utilisateurs</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Cr√©er un nouvel utilisateur</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-warning">Editer</a>
                    <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
